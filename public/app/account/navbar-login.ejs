<div class="navbar-right" ng-controller="mvNavbarLoginCtrl">
	<form class="navbar-form" ng-hide="identity.isAuthenticated()">
	    <div class="form-group">
	      <input type="text" placeholder="Email" class="form-control" ng-model="username">
	    </div>
	    <div class="form-group">
	      <input type="password" placeholder="Password" class="form-control" ng-model="password">
	    </div>
	    <button type="submit" class="btn btn-success" ng-click="signIn(username, password)">Sign in</button>
  </form>

  <ul class="nav navbar-nav navbar-right" ng-show="identity.isAuthenticated()">
  	<li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ identity.currentUser.firstName + " " + identity.currentUser.lastName }}<span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li ng-show="identity.currentUser.isAdmin()">
          <a href="/admin/users">User Admin</a>
        </li>  
        <li><a href="#" ng-click="signout()">Sign Out</a></li>
      </ul>
    </li>
  </ul>
</div>
